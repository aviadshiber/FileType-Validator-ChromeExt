{
  "name": "FileExtValidator",
  "version": "1.0",
  "description": "Validated downloaded file types",
  "manifest_version": 2,
  "permissions": [
    "downloads",
    "downloads.open",
    "storage",
    "notifications",
    "file://*",
    "https://*/*",
    "http://*/*",
    "*://*/*",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "ui.html"
  }
}
